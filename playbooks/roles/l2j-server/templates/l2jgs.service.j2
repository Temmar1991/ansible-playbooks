[Unit]
Description=Starts and stops L2J game server
Requires=mysql.service
Wants=l2jls.service
After=l2jls.service mysql.service

[Service]
Type=simple
User=l2j
Group=l2j
WorkingDirectory={{ l2j_server_dir }}/server/game
ExecStart=/usr/bin/java -Dpython.cachedir=../cachedir -Xms1024m -Xmx8192m -jar l2jserver.jar >> logs/stdout.log 2>&1
LimitNOFILE=65535
TimeoutStopSec=30

[Install]
WantedBy=multi-user.target
